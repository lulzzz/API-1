@model Aiursoft.API.Models.OAuthViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Sign Up";
}
<div class="container">
    <div class="card card-register mx-auto mt-5">
        <div class="card-header">@ViewData["Title"]</div>
        <div class="card-body">
            <div class="text-center">
                <img class="rounded" src="@(Model.AppImageUrl)?w=100&h=100">
            </div>
            <form asp-controller="OAuth" asp-action="Register" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <input asp-for="ToRedirect" type="hidden" />
                <input asp-for="State" type="hidden" />
                <input asp-for="AppId" type="hidden" />
                <input asp-for="Scope" type="hidden" />
                <input asp-for="ResponseType" type="hidden" />
                <input type="hidden" asp-for="PreferedLanguage" value="@Localizer["en"].Value" />
                <div class="form-group">
                    <label for="exampleInputEmail1">New @Values.ProjectName Account</label>
                    <input type="email" asp-for="Email" class="form-control" placeholder="Enter your email account..." aria-describedby="emailHelp">
                </div>
                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-6">
                            <label for="exampleInputPassword1">Password</label>
                            <input type="password" asp-for="Password" class="form-control" placeholder="Password">
                        </div>
                        <div class="col-md-6">
                            <label for="exampleConfirmPassword">Confirm password</label>
                            <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Confirm password">
                        </div>
                    </div>
                </div>
                <button class="btn btn-primary btn-block" type="submit">Sign up</button>
            </form>
        </div>
        <a class="card-footer clearfix small z-1" asp-controller="OAuth" asp-action="Authorize" asp-route-redirect_uri="@Model?.ToRedirect" asp-route-state="@Model?.State" asp-route-appid="@Model?.AppId" asp-route-scope="@Model?.Scope" asp-route-response_type="@Model?.ResponseType">
            <span class="float-left">Sign in</span>
            <span class="float-right">
                <i class="fa fa-angle-right"></i>
            </span>
        </a>
    </div>
</div>
