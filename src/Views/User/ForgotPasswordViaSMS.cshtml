@model Aiursoft.API.Models.UserViewModels.ForgotPasswordViaSMSViewModel
@{
    ViewData["Title"] = Localizer["Forgot password"];
}
<div class="container">
    <div class="card card-login mx-auto mt-5">
        <div class="card-header">@Localizer["Reset your password"]</div>
        <div class="card-body">
            <div class="text-center mt-4 mb-5">
                <h4>@Localizer["Reset your password"]</h4>
                <p>Enter your phonenumber and we will send you a link to reset your password.</p>
            </div>
            <form asp-controller="User" asp-action="ForgotPasswordViaEmail" method="post">
                <div class="form-group">
                    <input type="email" asp-for="PhoneNumber" class="form-control" placeholder="@Localizer["Enter your phone number"]">
                </div>
                <button class="btn btn-primary btn-block" type="submit">Send confimation sms</button>
            </form>
        </div>
    </div>
</div>