@model Aiursoft.API.Models.UserViewModels.ForgotPasswordViaSMSViewModel
@{
    ViewData["Title"] = Localizer["Forgot password"];
}
<div class="container">
    <div class="card card-login mx-auto mt-5">
        <div class="card-header">@Localizer["Reset your password"]</div>
        <div class="card-body">
            <div class="text-center mt-4 mb-5">
                <h4>@Localizer["Reset your password"]</h4>
                <p>Enter your phone number here. If your phone number match any of our accounts, we will send you a code to reset your password.</p>
            </div>
            @if (!Model.ModelStateValid)
            {
                <div class="alert alert-danger alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>
                    <div asp-validation-summary="All"></div>
                </div>
            }
            <form asp-controller="User" asp-action="ForgotPasswordViaSMS" method="post">
                <div class="form-group">
                    <input type="tel" asp-for="PhoneNumber" class="form-control" placeholder="@Localizer["Enter your phone number"]">
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <button class="btn btn-primary btn-block" type="submit">Send confimation SMS</button>
            </form>
        </div>
    </div>
</div>