@{
    ViewData["Title"] = Localizer["Forgot password"];
}
<div class="container">
    <div class="card card-login mx-auto mt-5">
        <div class="card-header">@Localizer["Reset your password"]</div>
        <div class="card-body">
            <div class="text-center mt-4 mb-5">
                <h4>@Localizer["Reset your password"]</h4>
                <p>You can reset your password via Email or by SMS.</p>
            </div>
            <a class="btn btn-success" asp-controller="User" asp-action="ForgotPasswordViaEmail">Via Email</a>
            <a class="btn btn-warning" asp-controller="User" asp-action="ForgotPasswordViaSMS">Via SMS</a>
        </div>
    </div>
</div>