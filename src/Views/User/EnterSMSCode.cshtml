@model Aiursoft.API.Models.UserViewModels.EnterSMSCodeViewModel
@{
    ViewData["Title"] = Localizer["Enter code"];
}
<div class="container">
    <div class="card card-login mx-auto mt-5">
        <div class="card-header">@Localizer["Reset your password"]</div>
        <div class="card-body">
            <div class="text-center mt-4 mb-5">
                <h4>@Localizer["Reset your password"]</h4>
                <p>We have sent the verification code to `*******@Model.PhoneLast`.</p>
                <p>Check your phone to get your password reset code.</p>
            </div>
            @if (!Model.ModelStateValid)
            {
                <div class="alert alert-danger alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>
                    <div asp-validation-summary="All"></div>
                </div>
            }
            <form asp-controller="User" asp-action="EnterSMSCode" method="post">
                <input type="hidden" asp-for="Email" />
                <div class="form-group">
                    <input type="text" asp-for="Code" class="form-control" placeholder="@Localizer["Enter your Code"]">
                </div>
                <button class="btn btn-primary btn-block" type="submit">Check code</button>
            </form>
        </div>
    </div>
</div>