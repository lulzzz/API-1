@model Aiursoft.API.Models.UserViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = Localizer["Forgot password"];
}
<div class="container">
    <div class="card card-login mx-auto mt-5">
        <div class="card-header">@Localizer["Reset your password:"]</div>
        <div class="card-body">
            <div class="text-center mt-4 mb-5">
                <h4>@Localizer["Reset your password:"]</h4>
                <p>Enter your email address and we will send you a link to reset your password.</p>
            </div>
            <form asp-controller="User" asp-action="ForgotPassword" method="post">
                <div class="form-group">
                    <input type="email" asp-for="Email" class="form-control" placeholder="@Localizer["Enter your email address"]">
                </div>
                <button class="btn btn-primary btn-block" type="submit">Reset Password</button>
            </form>
        </div>
    </div>
</div>