@model API.Models.ApiViewModels.SetlangViewModel
@{
    ViewData["Title"] = Localizer["Set Language"];
}
<div class="lock-wrapper">
    <div class="panel lock-box" id="panelinSignin">
    </div>
    <hr />
    @Localizer["Language:"]
    <form asp-controller="api" asp-action="setlang" method="post">
        <input type="hidden" name="culture" value="zh" />
        <input type="hidden" name="Host" value="@Model.Host" />
        <input type="hidden" name="Path" value="@Model.Path" />
        <input type="submit" value="中文 - 中国" />
    </form>
    <form asp-controller="api" asp-action="setlang" method="post">
        <input type="hidden" name="culture" value="en" />
        <input type="hidden" name="Host" value="@Model.Host" />
        <input type="hidden" name="Path" value="@Model.Path" />
        <input type="submit" value="English - United States" />
    </form>
</div>

